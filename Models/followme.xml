  <binding>
   <command>property-toggle</command>
   <property>controls/gear/rfdoor</property>
  </binding>
 </action>
</animation>

<animation>
 <type>rotate</type>
 <object-name>rdoor</object-name>
 <property>controls/gear//rfdoor</property>
 <factor>75</factor>
 <center>
  <x-m>1</x-m>
  <y-m>0.78</y-m>
  <z-m>0</z-m>
 </center>
 <axis>
  <x>0.0</x>
  <y>0.0</y>
  <z>1.0</z>
 </axis>
</animation>

<!-- BRAKING LIGHTS -->

<animation>
 <type>select</type>
 <object-name>braking_lights_lit</object-name>
 <condition>
   <greater-than>
    <property>/controls/gear/brake-left</property>
    <value>0</value>
   </greater-than>
 </condition>
</animation>

<animation>
 <type>select</type>
 <object-name>braking_lights_unlit</object-name>
 <condition>
   <less-than>
    <property>/controls/gear/brake-left</property>
    <value>0.01</value>
   </less-than>
 </condition>
</animation>

</PropertyList>
 
