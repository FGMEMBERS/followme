<!-- DOOR ANIMATIONS -->

<!-- LEFT FRONT DOOR -->

<animation>
 <type>pick</type>
 <object-name>ldoor</object-name>
 <action>
  <button>0</button>
  <repeatable>false</repeatable>  
  <binding>
   <command>property-toggle</command>
   <property>controls/gear/lfdoor</property>
  </binding>
 </action>
</animation>
 
<animation>
 <type>rotate</type>
 <object-name>ldoor</object-name>
 <property>controls/gear//lfdoor</property>
 <factor>-75</factor>
 <center>
  <x-m> 1</x-m>
  <y-m>-0.78</y-m>
  <z-m> 0</z-m>
 </center>
 <axis>
  <x>0.0</x>
  <y>0.0</y>
  <z>1.0</z>
 </axis>
</animation>

<!-- RIGHT FRONT DOOR -->

