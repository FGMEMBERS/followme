	<path>al3-lights.ac</path>
        <nopreview/>
        <animation>
            <type>light</type>
            <light-type>spot</light-type>
            <name>Landing_Light</name>
            <object-name>landing_light-volume</object-name>
            <position>
                <x>-3.0</x>
                <y>0.0</y>
                <z>-0.0585916</z>
            </position>
            <direction>
                <x> -1.0 </x>
                <y>  0.0 </y>
                <z>-0.3 </z>
            </direction>
            <ambient>
                <r>0.03</r>
                <g>0.03</g>
                <b>0.03</b>
                <a>1.0</a>
            </ambient>
            <diffuse>
                <r>1</r>
                <g>1</g>
                <b>1</b>
                <a>1.0</a>
            </diffuse>
            <specular>
                <r>1</r>
                <g>1</g>
                <b>1</b>
                <a>1.0</a>
            </specular>
            <attenuation>
	      <c>1.0</c>
	      <l>0.002</l>
	      <q>0.00005</q>
            </attenuation>            
            <exponent>50</exponent> <!--Thus, higher spot exponents result in a more focused light source 0-128-->
            <cutoff>40</cutoff>
            <!--the maximum spread angle of a light source 0-90-->
            <near-m>0.05</near-m>
            <far-m>200</far-m>
        </animation>

        <animation>
            <type>select</type>
            <object-name>Landing_Light</object-name>
            <condition>
                <and>
        <property>sim/multiplay/generic/int[4]</property>
                     <property>/sim/rendering/rembrandt/enabled</property>
                    <!--<greater-than>
                        <property>sim/time/sun-angle-rad</property>
                        <value>1.40</value>
                    </greater-than>-->
                </and>
            </condition>
        </animation>





</PropertyList>
